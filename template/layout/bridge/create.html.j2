{% from macro('form') import render_form %}
{% from macro('header') import render_header with context %}

{% extends layout('base') %}

{% block header %}
    {{ render_header(
        header.icon,
        header.title,
        subtitle='Adicionar'
    ) }}
{% endblock %}

{% block main %}
    {{ render_form(
        form,
        action=view(module ~ ':post', primary_id=primary_id),
        href=view(module ~ ':index', primary_id=primary_id),
    ) }}
{% endblock %}