{% from macro('form') import render_form %}
{% from macro('header') import render_header with context %}

{% extends layout('base') %}

{% block header %}
    {{ render_header(
        header.icon,
        header.title,
        subtitle='Editar'
    ) }}
{% endblock %}

{% block main %}
    {{ render_form(
        form,
        action=view('user:put'),
        href=view('user:show'),
    ) }}
{% endblock %}